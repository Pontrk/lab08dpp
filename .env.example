# .env.example (skopiuj jako .env i uzupe≈Çnij)

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
STORAGE_TYPE=memory
STORAGE_DIR=saved_games
MAX_GAMES=100

# Server Configuration
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_DEBUG=true

# Game Configuration
MAX_BOARD_SIZE=25
MIN_BOARD_SIZE=3
GAME_TIMEOUT_MINUTES=60
MOVE_TIMEOUT_SECONDS=30

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60

# CORS
CORS_ENABLED=true
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO
LOG_FILE=hex_flask.log